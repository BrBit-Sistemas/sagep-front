import type { BoxProps } from '@mui/material/Box';
import Box from '@mui/material/Box';

interface MeuComponenteProps extends BoxProps {
  title: string;
  variant?: 'default' | 'highlighted';
}

export function MeuComponente({ 
  title, 
  variant = 'default',
  sx,
  ...other 
}: MeuComponenteProps) {
